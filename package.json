{
  "name": "express-typescript",
  "version": "1.0.0",
  "description": "Express.ts",
  "main": "./server/index.ts",
  "scripts": {
    "dev": "webpack-dev-server --config webpack.dev.js",
    "prod": "NODE_ENV=production ts-node ./src/index.ts",
    "server": "ts-node ./src/index.ts",
    "start": "nodemon ./src/index.ts",
    "build": "webpack"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@typescript-eslint/eslint-plugin": "^2.1.0",
    "@typescript-eslint/parser": "^2.1.0",
    "babel-loader": "^8.0.6",
    "eslint": "^6.3.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "nodemon": "^1.19.2",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.8"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "clean-webpack-plugin": "^3.0.0",
    "dotenv": "^8.1.0",
    "express": "^4.17.1"
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true
  },
  "nodemon": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "ext": "ts"
  }
}
